generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Topic {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String   @unique
  words  Word[]

  @@map("topic")
}

model Word {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  word            String          @unique
  topic           Topic           @relation(fields: [topicId], references: [id])
  topicId         String          @db.ObjectId
  leaderboards    Leaderboard[]   @relation(fields: [leaderboardIDs], references: [id])
  leaderboardIDs  String[]        @db.ObjectId

  @@map("word")
}

model Leaderboard {
  id                          String    @id @default(auto()) @map("_id") @db.ObjectId
  playerName                  String
  correctWords                Word[]    @relation(fields: [correctWordIDs], references: [id])
  correctWordIDs              String[]  @db.ObjectId
  incorrectGuessesPerWord     Int[]
  startDatetime               DateTime
  endDatetime                 DateTime

  @@map("leaderboard")
}